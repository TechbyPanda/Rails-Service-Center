<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 p-4">
      <div class="card shadow-sm p-2">
        <h2 class="text-center"><%= @service_center_owner.name%></h2>
        <hr>
        <p> Address :- <%= @service_center_owner.address %> | <%= @service_center_owner.state %> | <%= @service_center_owner.city %> | <%= @service_center_owner.country %></p>
        <p> Mobile :- <%= @service_center_owner.mobile %></p>
        <p> Occupation :- <%= @service_center_owner.address %> | Gender :- <%= @service_center_owner.gender %></p>
        <p> Description :- <%= @service_center_owner.description %></p>
        <p> Description :- <%= @service_center_owner.user.email %></p>
        <div>
          <%= link_to "Edit", edit_service_center_owner_path(@service_center_owner), class:"btn btn-primary btn-sm"%>
          <%= link_to "Create Service Center", new_service_station_path, class:"btn btn-dark btn-sm"%>
        </div>
      </div>
    </div>
  </div>
</div>


<h1 class="text-center">Your Service Centers</h1>

<div class="container">
  <div class="row align-center">
    <% User.find(current_user.id).service_stations.each do |service_station| %>
      <%= render 'service_stations/service_station', service_station: service_station  %>
    <% end %>
  </div>
</div>